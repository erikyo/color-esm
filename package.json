{
  "name": "color-esm",
  "version": "0.0.1",
  "description": "Chainable color library es module (inspired to color)",
  "main": "index.js",
  "license": "ISC",
  "author": "Erik Golinelli <https://github.com/erikyo>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erikyo/color-esm.git"
  },
  "homepage": "https://erikyo.github.io/color-esm/",
  "bugs": {
    "url": "https://github.com/erikyo/color-esm/issues"
  },
  "type": "module",
  "module": "lib/esm/index.js",
  "sideEffects": false,
  "keywords": [
    "color",
    "css"
  ],
  "supports": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules --test --experimental-specifier-resolution=node --experimental-vm-modules",
    "test:watch": "node --test --watch ",
    "lint": "npx @biomejs/biome check --apply src tests",
    "start": "npx esbuild src/index.ts esbuild app.ts --bundle --outdir=dist  --outdir=lib/esm --format=esm --global-name=Color --watch",
    "prebuild": "rimraf lib",
    "build": "npm run build:esm && npm run build:iife",
    "build:esm": "npx esbuild src/index.ts --bundle --minify --sourcemap --outdir=lib/esm --format=esm --global-name=Color",
    "build:iife": "npm run build:iife- && npm run build:iife-min",
    "build:iife-": "npx esbuild src/index.ts --bundle --outfile=lib/iife/color.js --format=iife --global-name=Color",
    "build:iife-min": "npx esbuild src/index.ts --bundle --minify --sourcemap --outfile=lib/iife/color.min.js --format=iife --global-name=Color",
    "prepublish": "npm run lint && npm run test"
  }
}
