{
  "compilerOptions": {
    "extends": "./tsconfig",
    "lib": [
      "dom",
      "dom.iterable",
      "Decorators",
      "ES2022",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "exclude": [
      "lib/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ],
    "exclude": [
      "lib/",
      "tests/fixtures/**/*.ts"
    ]
  },
  "nodeModulesDir": true,
  "imports": {
    "esbuild": "https://deno.land/x/esbuild@v0.20.1/mod.js"
  },
  "tasks": {
    "dev": "deno run -A --watch=src build.mjs",
    "build": "deno run -A -r build.mjs"
  }
}
