{
	"compilerOptions": {
		"esModuleInterop": true,
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"skipLibCheck": true,
		"preserveConstEnums": true,
		"outDir": "./lib/esm",
		"declarationDir": "lib/@types",
		"declaration": true,
		"emitDeclarationOnly": true,
		"strict": false,
		"lib": [
			"dom",
			"dom.iterable",
			"dom.asynciterable",
			"deno.ns",
			"deno.unstable"
		]
	},
	"include": ["src/**/*", "tsconfig.json", "node_modules/**/*"]
}
