{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "./lib/esm",
    "declarationDir": "lib/@types",
    "declaration": true,
    "inlineSourceMap": true,
    "strict": false
  },
  "include": [
    "./src/**/*",
    "./tsconfig.json"
  ]
}
