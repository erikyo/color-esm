{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "Decorators",
      "ES2022"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "outDir": "./lib/esm",
    "declarationDir": "lib/@types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "strict": false
  },
  "include": [
    "./src/**/*",
    "./tsconfig.json",
    "node_modules/**/*"
  ]
}
